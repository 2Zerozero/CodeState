{
  "name": "cmarket-redux",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/preset-react": "^7.12.10",
    "@reduxjs/toolkit": "^1.1.0",
    "axios": "^0.21.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.1.0-rc.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest src/index.test.js --verbose",
    "eject": "react-scripts eject",
    "report": "jest src/index.test.js --verbose --json --outputFile=report.jest.json",
    "submit": "codestates"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "./node_modules/codestates-assignment-manager/imposter-reporter/index.js",
        {
          "project_id": "async-and-promise"
        }
      ]
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "testEnvironment": "jsdom"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "babel-jest": "^26.6.3",
    "codestates-assignment-manager": "^1.8.0",
    "redux-mock-store": "^1.5.4"
  }
}
